                <TextBlock
                Text="Télefono:"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Grid.Column="1"
                Grid.Row="2"
                FontSize="15"
                Foreground="White" Margin="11,27,0,0"/>


                <TextBlock
                Text="Profesion/Procedencia:"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Grid.Row="3"
                FontSize="8"
                Foreground="White" Margin="10,29,0,0" Width="84" Height="36" Grid.RowSpan="2" Grid.ColumnSpan="2"/>


                <!--#endregion TEXTO-->
                <!--#region TEXTBOX-->
                <TextBox Style="{DynamicResource TextBoxStyle1}"  TextAlignment="Center"
                       Background="white"
                       BorderBrush ="White"
                        Grid.Column="1"
                       Grid.Row="1"
                       FontSize="20" Grid.ColumnSpan="3" Margin="76,8,10,2"
                     x:Name="nombre_paciente"/>



                <TextBox Style="{DynamicResource TextBoxStyle1}" TextAlignment="Center"
                       Background="white"
                       BorderBrush ="White"
                        Grid.Column="1"
                       Grid.Row="2"
                       FontSize="20" Grid.ColumnSpan="2" Margin="76,8,0,2"
                     x:Name="télefono_paciente" HorizontalAlignment="Left" Width="286"/>


                <TextBox Style="{DynamicResource TextBoxStyle1}" TextAlignment="Center"
                       Background="white"
                       BorderBrush ="White"
                        Grid.Column="1"
                       Grid.Row="3"
                       FontSize="20" Grid.ColumnSpan="3" Margin="76,6,0,4"
                     x:Name="direccion_paciente" HorizontalAlignment="Left" Width="471"/>
                <!--#endregion TEXTBOX-->


                <!--#region AGREGAR-->

                <Button 
                 Style="{DynamicResource ButtonStyle1}"
                Grid.Row="4"
                    Grid.Column="1"
                    Background="#f6d1de"
                    Cursor="Hand"
                    BorderBrush="White"
                    x:Name="BtnObs" Margin="19,20,15,0" Click="BtnObs_Click">
                    <TextBlock
                    Text="Nueva Historia Obstétrica"
                    Foreground="black"
                    FontSize="12"
                    >

                    </TextBlock>
                </Button>
                <Image
                Grid.Column="3"
                Grid.RowSpan="4"
                x:Name="foto"
                Source="/SCS/IMG/user-solid.png" Margin="183,-1,74,14" Grid.ColumnSpan="2"/>
                <!--Button x:Name="foto_perfil" 
                  Style="{DynamicResource ButtonStyle1}"
                    Grid.Column="4"
                    Grid.Row="4" 
                    Margin="4,0,82,15" 
                    Cursor="Hand"
                        BorderBrush="White"
                     Foreground="White"
                    Width="100"
                    Background="Pink"
                    
                    Content="Agregar Foto" Click="Subir"/ -->
                <Button x:Name="BTnArchivos"
                      Style="{DynamicResource ButtonStyle1}"
                    Grid.Column="3"
                    Grid.Row="4" 
                    Margin="11,16,74,0" 
                    Cursor="Hand"
                        BorderBrush="White"
                     Foreground="Black"
                    Width="100"
                    Background="#84b6f4"
                   
                    Content="Ver Archivos" Height="34" VerticalAlignment="Top" Click="Visualizar"
                    />
                <Button Style="{DynamicResource ButtonStyle1}" Grid.Row="4"
                    Grid.Column="2"
                    Background="#eef6b0"
                    Cursor="Hand"
                    BorderBrush="White"
                    x:Name="BtnGinecologico" Margin="18,21,9,0" Click="Avanzar">
                    <TextBlock
                    Text="Nueva Historia Ginecológica"
                    Foreground="Black"
                    FontSize="12">

                    </TextBlock>
                </Button>


                <Button Style="{DynamicResource ButtonStyle1}"
                        Cursor="Hand"
                        BorderBrush="White"
                        Foreground="black"
                        Width="100"
                        Background="#f47e8e"      
                        x:Name="BtnFicha"
                        Content="Consultar Ficha" 
                        Margin="56,4,30,46" 
                        Grid.Column="4" 
                        Grid.Row="8" 
                        Click="Ficha" Grid.RowSpan="2"/>

                <Button Style="{DynamicResource ButtonStyle1}"
                        Cursor="Hand"
                        BorderBrush="White"
                        Foreground="black"
                        Width="100"
                        Background="#7ff9c7"      
                        x:Name="btnRefresh"
                        Content="Refrescar" 
                        Margin="56,48,30,2" 
                        Grid.Column="4" 
                        Grid.Row="6" 
                        Grid.RowSpan="2" 
                        Click="Refresh"/>


                <!--#endregion AGREGAR-->

                <!--#region DATAGRID-->
                <DataGrid Style="{DynamicResource DataGridStyle1}" 
                x:Name="historias" 
                Grid.Row="5"
                         
                Grid.Column="1"
                Grid.ColumnSpan="4"
                Background="GhostWhite"
                Foreground="Black"
                FontSize="15"
                AutoGenerateColumns="False"
                RowBackground="Transparent"
                HeadersVisibility="Column"
                GridLinesVisibility="Horizontal"
                HorizontalGridLinesBrush="Black"
                CanUserAddRows="False"
                CanUserResizeColumns="True"
                CanUserResizeRows="False"
                CanUserSortColumns="False" Margin="0,16,166,33" Grid.RowSpan="6" SelectionChanged="historias_SelectionChanged">



                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Opciones"
                                            Width="245">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <DockPanel>
                                        <!--#region BOTONES CONTROL-->
                                        <Button 
                                        Content="Consultar"
                                        x:Name="btnConsultar"
                                        Click="Ver"
                                        CommandParameter="{Binding MyUUID}"
                                       Background="#cfffca"
                                        Foreground="Black"
                                        Width="80"
                                        BorderBrush="Black"/>

                                        <!--     <Button 
                                        x:Name="BtnActualizar"
                                        Content="Actualizar"
                                        Grid.Column="5"
                                        Grid.Row="10"
                                        CommandParameter="{Binding MyUUID}"
                                        Foreground="White"
                                        Cursor="Hand"
                                        BorderBrush="White"
                                        Background="Pink" Margin="56,4,8,0"
                                        Click="updateObstet"/>

                                        <Button 
                                        x:Name="BtnBorrar"
                                        Content="Eliminar"
                                        CommandParameter="{Binding MyUUID}"
                                        Grid.Column="5"
                                        Grid.Row="12"
                                        Foreground="White"
                                        Cursor="Hand"
                                        BorderBrush="White"
                                        Background="red" Margin="56,4,8,0"
                                        Click="deleteObstet"/>  -->


                                        <!--#endregion BOTONES CONTROL-->
                                    </DockPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn
                        Binding="{Binding Fecha, StringFormat=\{0:dd/MM/yyyy\}}"
                        Header="Fecha"
                        Width="*"/>
                        <DataGridTextColumn
                        Binding="{Binding Tipo}"
                        Header="Tipo"
                        Width="*"/>
                        <DataGridTextColumn
                        Binding="{Binding Medico}"
                        Header="Médico"
                        Width="*"/>

                    </DataGrid.Columns>




                </DataGrid>
                <!--#endregion DATAGRID-->

                <!--#region FRAME-->

                <!--#endregion FRAME-->

            </Grid>
        </ScrollViewer>
    </Border>
</UserControl>
